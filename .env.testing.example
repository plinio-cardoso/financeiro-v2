APP_NAME="Financeiro Testing"
APP_ENV=testing
APP_KEY=base64:TESTING_KEY_REPLACE_THIS_WITH_REAL_KEY
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=4

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# SQLite in-memory database for testing (configured in phpunit.xml)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

SESSION_DRIVER=array
SESSION_LIFETIME=120

BROADCAST_CONNECTION=null
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=array

# Mail configured in phpunit.xml to use 'array' driver
MAIL_MAILER=array
MAIL_FROM_ADDRESS="test@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun - Use fake values for testing (actual API calls are mocked in tests)
MAILGUN_DOMAIN=sandbox.mailgun.org
MAILGUN_SECRET=key-fake-testing-key-replace-with-real
MAILGUN_ENDPOINT=api.mailgun.net

# OpenAI - Use fake key for testing (actual API calls should be mocked)
OPENAI_API_KEY=sk-fake-testing-key-replace-with-real-key-for-local-testing

# Vite
VITE_APP_NAME="${APP_NAME}"
